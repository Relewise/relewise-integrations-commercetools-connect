{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "module": "commonjs",
  "skipLibCheck": true,
  "moduleResolution": "node",
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "./build",
    "rootDir": "./src",
    "inlineSourceMap": true
  }
}